@model IEnumerable<WebApplication1.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Pages";
}

<h2>Pages</h2>
@if (TempData["SM"]!=null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<p>
    @Html.ActionLink("Create New Page", "AddPage","",new {@class= "btn btn-success" })
</p>
<table class="table sorting" id="pages">
    <tr class="home">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Slug)
        </th>
        <th>
           SideBar
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="id_@item.Id" class="@item.Slug">
        <td>
            @if (item.Slug!="home")
            {
                <span class="ui-icon ui-icon-arrow-2-n-s"></span>
            }
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Slug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HasSideBar)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPage", new { id = item.Id }) |
            @Html.ActionLink("Details", "PageDetails", new { id = item.Id }) |
            @if (item.Slug != "home")
            {
                string slash = "| ";
                @slash;
                @Html.ActionLink("Delete", "DeletePage", new { id = item.Id }, new { @class = "delete" })
            }
        </td>
    </tr>
}

</table>

@section Scripts
{
    <script>
        $(function () {
            //Confirm page deletion
            $("a.delete").click(function () {
                if (!confirm("Confirm page deletion")) return false;
            });
        /*sorting script*/
            $("table#pages tbody").sortable({
                items: "tr:not(.home)",
                placeholder: "ui-state-hightlight",
                update: function () {
                    var ids = $("table#pages tbody").sortable("serialize");
                    console.log(ids);
                    var url = "/Admin/Pages/ReoredPages";

                    $.post(url, ids, function (data) {
                    });
                }
            })
        });
    </script>
}
